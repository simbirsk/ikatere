<div class="modal hide fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginTitle" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="loginTitle">Sign in</h3>
  </div>
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
      <div class="modal-body">
        <%= f.error_notification %>
        <%= f.input :login, :autofocus => true %>
        <%= f.input :password, :required => false %>
        <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), :class => "pull-right" %><br />
      </div>
      <div class="modal-footer">
        <button type="button" class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <%= f.button :submit, "Sign in", :class => "btn-primary" %>
      </div>
  <% end %>
</div>